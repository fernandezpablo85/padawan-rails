<html>
  <head>
    <title> Padawan On Railz </title>
    <%= stylesheet_link_tag 'main' %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'padawan' %>
  </head>
  <body>
  <% if flash[:hg_row] then -%>
    <input id="hg_row" type="hidden" value="<%= flash[:hg_row]%>"/>
  <% end -%>
  <div id="header" class="boxed">
    <h1><%= image_tag "rails_logo.png" %> Padawan On Rails</h1>
    <h2>
      The padawan demo app ported to <strong>Ruby On Rails</strong> Framework
    </h2>
  </div>
  <% if flash[:info] -%>
    <div id="info_header" class="boxed">
      <h1>Information:</h1>
      <p><%= flash[:info] %></p>
    </div>
  <% end -%><br style="clear:both"/>
  <div id="navigation" class="nav_list">
    <%= link_to "Students", students_path %>
    <%= link_to "Teachers", teachers_path %>
    <%= link_to "Courses",  courses_path %>
  </div>
  <div id="content" class="boxed">
    <% if flash[:notice] || flash[:error] -%>
    <div id="info_panel" >
      <% if flash[:notice] -%>
        <p class="notice">[<%= flash[:notice] %>]</p>  
      <% end -%>
      <% if flash[:error] -%>
        <p class="error">[<%= flash[:error] %>]</p>  
      <% end -%> 
    </div>
    <% end -%>
    <%= yield %>
  </div>
  <div id="actions" class="nav_list">
    <%= yield :actions %>
  </div>
  <div id="footer" class="boxed">
      @ Designed and Developed By <%=mail_to "fernandezpablo85@gmail.com",  "Pablo Fernandez", 
                                                                          :subject => '[PadawanOnRails] Subject',
                                                                          :body => "replace 'Subject' with your mail topic" %>
  <div>
  </body>
</html>
